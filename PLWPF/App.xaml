                        </Setter.Value>
                    </Setter>
                    <Setter Property = "FontSize" Value="36"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Triggers7" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button" x:Name="order">
                                <Grid>
                                    <TextBlock Text="Order"/>
                                    <Border Background="{x:Null}" BorderBrush="{x:Null}"/>
                                    <Button Background="{x:Null}" BorderBrush="{x:Null}"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property = "FontSize" Value="36"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
