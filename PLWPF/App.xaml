            </Style.Triggers>
        </Style>
        <Style x:Key="Triggers5" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button" x:Name="update">
                                <Grid>
                                    <TextBlock Text="Update hosting unit"/>
                                    <Border Background="{x:Null}" BorderBrush="{x:Null}"/>
                                    <Button Background="{x:Null}" BorderBrush="{x:Null}"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property = "FontSize" Value="36"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Triggers6" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
