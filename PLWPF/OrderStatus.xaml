<Window x:Class="PLWPF.OrderStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="OrderStatus" Height="148.26" Width="182.947" >
    <Grid x:Name="grid">
        <Grid.Background>
            <ImageBrush ImageSource="Pictures\Normal_name.jpg">
            </ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="status" HorizontalAlignment="Left" Text="{Binding Status}" Margin="0.4,1.6,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="22" Grid.Row="1"/>
        <Button Content="OK" FontSize="15" HorizontalAlignment="Left" Margin="20.4,2.6,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.Column="1" Grid.Row="3" Click="Button_Click"/>

    </Grid>
</Window>
